<!DOCTYPE html>
<html>
<head>
  <title>Biblio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "#{request.subdomain}図書館", root_path, class: "navbar-brand" %>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="navbar-collapse collapse" id="navbar-main">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to "所蔵物", publications_path %>
        </li>
      </ul>

      <%= show_search_box %>

      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download"><%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu" aria-labelledby="download">
              <li><%= link_to "アカウント情報", user_path(current_user) %></li>
              <li><%= link_to "ログアウト", session_path(current_user), method: :delete %></li>
              <li class="divider"></li>
              <li><%= link_to "職員ログイン", new_admin_session_path %></li>
            </ul>
          </li>
        <% else %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Login <span class="caret"></span></a>
            <ul class="dropdown-menu" aria-labelledby="download">
              <li><%= link_to "利用者新規登録", new_user_path %></li>
              <li class="divider"></li>
              <li><%= link_to "利用者ログイン", new_session_path %></li>
              <li><%= link_to "職員ログイン", new_admin_session_path %></li>
            </ul>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>

</body>
</html>

