<h1>Listing staffs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= non_subdomained_login_id(request, staff.login_id) %></td>
        <td><%= link_to 'Show', [:admin, staff] %></td>
        <td><%= link_to 'Edit', edit_admin_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', [:admin, staff], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

