<div class="col-md-6">
  <h1>Listing books</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Author</th>
        <th>Isbn</th>
        <th>Age limit</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.author %></td>
          <td><%= book.isbn %></td>
          <td><%= book.age_limit %></td>
          <td><%= book.status %></td>
          <td><%= link_to 'Show', admin_publication_path(book, type: :book) %></td>
          <td><%= link_to 'Edit', edit_admin_publication_path(book, type: :book) %></td>
          <td><%= link_to 'Destroy', admin_publication_path(book, type: :book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= 'ないです' if @books.blank? %>

  <%= link_to 'New Book', { controller: :publications, action: :new, type: :book }, class: "btn btn-primary btn-lg" %>

</div>
