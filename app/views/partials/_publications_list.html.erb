<%= show_search_result if params[:q] %>
<div class="row">
  <div class="col-md-2">
    <%= show_menu %>
  </div>

  <div class="col-md-5">
    <h1>Listing books</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Author</th>
          <th>Isbn</th>
          <th>Age limit</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.name %></td>
            <td><%= book.author %></td>
            <td><%= book.isbn %></td>
            <td><%= book.age_limit %></td>
            <td><%= show_the_status_of_publication book %></td>
            <td><%= choose_a_publication book %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <div class="col-md-5">
    <h1>Listing magazines</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Author</th>
          <th>Issn</th>
          <th>Age limit</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @magazines.each do |magazine| %>
          <tr>
            <td><%= magazine.name %></td>
            <td><%= magazine.author %></td>
            <td><%= magazine.issn %></td>
            <td><%= magazine.age_limit %></td>
            <td><%= show_the_status_of_publication magazine %></td>
            <td><%= choose_a_publication magazine %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
