<div class="col-md-6">
  <h1>Listing books</h1>

  <table>
    <thead>
      <tr>
        <th>Library</th>
        <th>Name</th>
        <th>Author</th>
        <th>Isbn</th>
        <th>Age limit</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.library.name  %></td>
          <td><%= book.name %></td>
          <td><%= book.author %></td>
          <td><%= book.isbn %></td>
          <td><%= book.age_limit %></td>
          <td><%= book.status %></td>
          <td><%= link_to 'Show', book %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
